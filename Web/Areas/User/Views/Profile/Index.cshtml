@model IQueryable<Core.Objects.Products.Product>

@{
    Layout = "_Layout";
}

<h1>Ваш аккаунт</h1>

<div>
    @if (Model.Any())
    {
        @foreach (var product in Model)
        {
            <p>Название: @product.Title</p>
            <p>Цена: @product.Price</p>
            <p>Осталось на складе: @product.Remained шт.</p><br>
        }
    }
    else
    {
        <p>На сайте пока нет товаров</p>
    }
</div>


<button><a href="http://127.0.0.1/ProductAdd">Добавить товар</a></button>
